#! /usr/bin/vvp
:ivl_version "0.9.7 " "(v0_9_7)";
:vpi_time_precision + 0;
:vpi_module "system";
:vpi_module "v2005_math";
:vpi_module "va_math";
S_0x15af730 .scope module, "test" "test" 2 16;
 .timescale 0 0;
v0x15f3a60_0 .var "clk", 0 0;
v0x15f3b30_0 .var "immediate", 1 0;
v0x15f3be0_0 .net "sign_extended", 7 0, v0x15f38d0_0; 1 drivers
S_0x15f3970 .scope task, "display" "display" 2 35, 2 35, S_0x15af730;
 .timescale 0 0;
TD_test.display ;
    %delay 1, 0;
    %vpi_call 2 36 "$display", "immediate=%b, sign_extended=%b, clk=%b", v0x15f3b30_0, v0x15f3be0_0, v0x15f3a60_0;
    %end;
S_0x15af820 .scope module, "SIGN_EXTENSION" "sign_extension" 2 21, 2 1, S_0x15af730;
 .timescale 0 0;
v0x15e4c50_0 .net "clk", 0 0, v0x15f3a60_0; 1 drivers
v0x15f3830_0 .net "immediate", 1 0, v0x15f3b30_0; 1 drivers
v0x15f38d0_0 .var "sign_extended", 7 0;
E_0x15c14c0 .event posedge, v0x15e4c50_0;
    .scope S_0x15af820;
T_1 ;
    %wait E_0x15c14c0;
    %load/v 8, v0x15f3830_0, 2;
    %mov 10, 9, 1;
    %mov 11, 9, 1;
    %mov 12, 9, 1;
    %mov 13, 9, 1;
    %mov 14, 9, 1;
    %mov 15, 9, 1;
    %ix/load 0, 8, 0;
    %assign/v0 v0x15f38d0_0, 0, 8;
    %jmp T_1;
    .thread T_1;
    .scope S_0x15af730;
T_2 ;
    %vpi_call 2 27 "$display", "Initial conditions";
    %set/v v0x15f3a60_0, 0, 1;
    %movi 8, 2, 2;
    %set/v v0x15f3b30_0, 8, 2;
    %set/v v0x15f3a60_0, 1, 1;
    %fork TD_test.display, S_0x15f3970;
    %join;
    %end;
    .thread T_2;
# The file index is used to find the file name in the following table.
:file_names 3;
    "N/A";
    "<interactive>";
    "sign_extension.v";
